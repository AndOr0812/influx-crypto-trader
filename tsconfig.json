{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@src/*": ["src/*"],
      "@core/*": ["src/_core/*"],
      "@api/*": ["src/api/*"],
      "@indicators/*": ["src/indicators/*"],
      "@strategies/*": ["strategies/*"],
      "@config/*": ["config/*"]
    },
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "config/config.ts"],
  "exclude": ["./node_modules"]
}
